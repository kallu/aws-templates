  S3vpcEndpoint:
    Type: AWS::EC2::VPCEndpoint
    Properties:
      ServiceName: !Sub 'com.amazonaws.${AWS::Region}.s3'
      VpcEndpointType: Gateway
      VpcId: !Ref VPC
      RouteTableIds:
      - !If
        - PubAny
        - !Ref PubRouteTable
        - !Ref AWS::NoValue
      - !If
        - IntraAny
        - !Ref IntraRouteTable
        - !Ref AWS::NoValue
{%- for x in AZ %}
      - !If
        - Priv{{x.az|lower}}
        - !Ref PrivRouteTable{{x.az|lower}}
        - !Ref AWS::NoValue
{%- endfor %}

  DynamoDBvpcEndpoint:
    Type: AWS::EC2::VPCEndpoint
    Properties:
      ServiceName: !Sub 'com.amazonaws.${AWS::Region}.dynamodb'
      VpcEndpointType: Gateway
      VpcId: !Ref VPC
      RouteTableIds:
      - !If
        - PubAny
        - !Ref PubRouteTable
        - !Ref AWS::NoValue
      - !If
        - IntraAny
        - !Ref IntraRouteTable
        - !Ref AWS::NoValue
{%- for x in AZ %}
      - !If
        - Priv{{x.az|lower}}
        - !Ref PrivRouteTable{{x.az|lower}}
        - !Ref AWS::NoValue
{%- endfor %}
