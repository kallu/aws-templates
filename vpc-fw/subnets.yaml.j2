  EgressTGWSubnet{{x.az|upper}}:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref EgressVPC
      AvailabilityZone: !Sub ${AWS::Region}{{x.az|lower}}
      CidrBlock: !Ref EgressTGWCidr{{x.az|upper}}
      MapPublicIpOnLaunch: false
      Tags:
        - Key: Name
          Value: !Sub '${AWS::StackName} Egress VPC TGW subnet-{{x.az|upper}}'

  EgressPubSubnet{{x.az|upper}}:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref EgressVPC
      AvailabilityZone: !Sub ${AWS::Region}{{x.az|lower}}
      CidrBlock: !Ref EgressPubCidr{{x.az|upper}}
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: !Sub '${AWS::StackName} Egress VPC Public subnet-{{x.az|upper}}'