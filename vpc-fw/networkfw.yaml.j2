  {{fw}}FwRouteTable:
    Type: AWS::EC2::RouteTable
    Properties: 
      VpcId: !Ref {{fw}}InspectionVPC
      Tags:
        - Key: Name
          Value: !Sub '${AWS::StackName} {{fw}} Inspection VPC FW route-table'

  {{fw}}FwDefaultRoute:
    Type: AWS::EC2::Route
    Condition: HasTgwAttachment
    DependsOn: {{fw}}InspectionTgwAttachment
    Properties:
      RouteTableId: !Ref {{fw}}FwRouteTable
      DestinationCidrBlock: '0.0.0.0/0'
      TransitGatewayId: !Ref TgwAttachment

  {{fw}}NetworkFW:
    Type: AWS::NetworkFirewall::Firewall
    Properties:
      FirewallName: !Sub '{{fw}}-${AWS::StackName}'
      FirewallPolicyArn: !Ref {{fw}}DefaultFirewallPolicy
      VpcId: !Ref {{fw}}InspectionVPC
      SubnetMappings:
{%- for x in AZ %}
        - SubnetId: !Ref {{fw}}InspectionFWSubnet{{x.az|upper}}
{%- endfor %}
      Description: Network firewall to inspect traffic to on-prem networks
      Tags:
        - Key: Name
          Value: !Sub '${AWS::StackName} on-prem network firewall'

{%- for x in AZ %}
  # See https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-networkfirewall/issues/15
  {{fw}}InspectionTGWRoute{{x.az|upper}}:
    Type: AWS::EC2::Route
    Properties:
      RouteTableId: !Ref {{fw}}InspectionTGWRouteTable{{x.az|upper}}
      DestinationCidrBlock: '0.0.0.0/0'
      VpcEndpointId: !Select [ 0, !Split [ ',', !Select [ 1 , !Split [ '{{x.az|lower}}:', !Join [ ',', !GetAtt {{fw}}NetworkFW.EndpointIds ] ] ] ] ]
{%- endfor %}

  {{fw}}DefaultFirewallPolicy:
    Type: 'AWS::NetworkFirewall::FirewallPolicy'
    Properties:
      FirewallPolicyName: !Sub "${AWS::StackName}-default-{{fw}}-policy"
      FirewallPolicy:
        StatelessDefaultActions:
          - 'aws:pass'
        StatelessFragmentDefaultActions:
          - 'aws:pass'
      Description: Default firewall policy passing everything
      Tags:
        - Key: Name
          Value: !Sub '${AWS::StackName} default on-prem policy'

